{
  "compilerOptions": {
    "outDir": "./dist",  // ✅ Ensures compiled files go inside 'dist/'
    "rootDir": "./src",  // ✅ Ensures TS compiles files from 'src/'
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"],  // ✅ Only compile files inside 'src/'
  "exclude": ["node_modules", "dist"]
}
